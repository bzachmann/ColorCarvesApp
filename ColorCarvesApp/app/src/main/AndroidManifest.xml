<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jackson.andrew.colorcarvesapp">


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainMenu"
            android:launchMode="singleTask"/>
        <activity android:name=".AngleSettingScreen"
            android:launchMode="singleTask"
            android:alwaysRetainTaskState="true"/>
        <activity android:name=".BoardSpecsScreen"
            android:launchMode="singleInstance"
            android:alwaysRetainTaskState="true"/>
        <activity android:name=".LEDSettingScreen"
            android:launchMode="singleTask"/>
        <activity android:name=".BaseSettingScreen"
            android:launchMode="singleTask"/>
        <activity android:name=".EnableOptionsSettingScreen"
            android:launchMode="singleTask"/>
        <activity android:name=".SpeedSettingScreen"
            android:launchMode="singleTask"></activity>
    </application>

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

</manifest>