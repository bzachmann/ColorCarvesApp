<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jackson.andrew.colorcarvesapp.SpeedSettingScreen"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <EditText
        android:id="@+id/MaxSpeedDisaplay"
        android:layout_width="121dp"
        android:layout_height="46dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toBottomOf="@+id/SpeedMaximum"
        app:layout_constraintLeft_toRightOf="@+id/SpeedMaximum"
        app:layout_constraintRight_toRightOf="@+id/KeepMaxSpeed"
        app:layout_constraintTop_toBottomOf="@+id/KeepMaxSpeed"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/SpeedCancel"
        android:layout_width="178dp"
        android:layout_height="48dp"
        android:text="Cancel"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />


    <TextView
        android:id="@+id/SpeedMaximum"
        android:layout_width="121dp"
        android:layout_height="46dp"
        android:text="Max Speed:"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/KeepMaxSpeed"
        app:layout_constraintTop_toBottomOf="@+id/KeepMaxSpeed"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <EditText
        android:id="@+id/MinSpeedDisplay"
        android:layout_width="121dp"
        android:layout_height="46dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toBottomOf="@+id/SpeedMinimum"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/SpeedMinimum"
        app:layout_constraintRight_toRightOf="@+id/KeepMinSpeed"
        app:layout_constraintTop_toBottomOf="@+id/KeepMinSpeed"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <CheckBox
        android:id="@+id/KeepMaxSpeed"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:checked="true"
        android:text="Keep Max Speed"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="69dp"
        android:layout_marginEnd="69dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="83dp"
        app:layout_constraintTop_toBottomOf="@+id/MinSpeedDisplay"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/SpeedConfirm"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Confirm"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/SpeedCancel"
        app:layout_constraintRight_toRightOf="@+id/SpeedCancel"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/SpeedCancel" />

    <CheckBox
        android:id="@+id/KeepMinSpeed"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:checked="true"
        android:text="Keep Min Speed"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="69dp"
        android:layout_marginEnd="69dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="85dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/SpeedMinimum"
        android:layout_width="121dp"
        android:layout_height="46dp"
        android:text="Min Speed:"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintRight_toLeftOf="@+id/MaxSpeedDisaplay"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/KeepMinSpeed"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/KeepMinSpeed"
        android:layout_marginTop="0dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline2"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="horizontal" />

</android.support.constraint.ConstraintLayout>
