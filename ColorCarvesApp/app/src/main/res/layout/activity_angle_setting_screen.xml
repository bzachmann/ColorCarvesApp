<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jackson.andrew.colorcarvesapp.AngleSettingScreen"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <CheckBox
        android:id="@+id/AngleCurrentSetting"
        android:layout_width="184dp"
        android:layout_height="37dp"
        android:checked="true"
        android:text="Keep Current Setting"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/KeepAbsoluteMode"
        android:layout_marginStart="16dp"
        android:layout_marginTop="55dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="53dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/AngleAbsoluteMode"
        android:layout_width="0dp"
        android:layout_height="37dp"
        android:text="Absolute Mode"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/KeepAbsoluteMode"
        app:layout_constraintTop_toBottomOf="@+id/KeepAbsoluteMode"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/KeepAbsoluteMode" />

    <Button
        android:id="@+id/AngleConfirm"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Confrim"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/AngleCancel"
        app:layout_constraintRight_toRightOf="@+id/AngleCancel"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/AngleCancel"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginBottom="9dp" />

    <Button
        android:id="@+id/AngleCancel"
        android:layout_width="178dp"
        android:layout_height="48dp"
        android:text="Cancel"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="41dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <SeekBar
        android:id="@+id/AngleLimitSeekBar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:max="1022"
        app:layout_constraintRight_toLeftOf="@+id/AngleLimitDisplay"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/AngleLimitDisplay"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/AngleLimit"
        app:layout_constraintTop_toTopOf="@+id/AngleLimitDisplay"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/AngleLimit"
        android:layout_width="123dp"
        android:layout_height="33dp"
        android:text="Angle Limit:"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18dp"
        android:textStyle="bold"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="26dp"
        app:layout_constraintBottom_toBottomOf="@+id/AngleLimitSeekBar"
        android:layout_marginTop="34dp"
        app:layout_constraintTop_toBottomOf="@+id/AngleAbsoluteMode"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="36dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="26dp"
        app:layout_constraintVertical_bias="0.72" />

    <TextView
        android:id="@+id/AngleLimitDisplay"
        android:layout_width="100dp"
        android:layout_height="34dp"
        android:layout_marginBottom="189dp"
        android:layout_marginEnd="64dp"
        android:layout_marginTop="189dp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AngleCurrentSetting"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <CheckBox
        android:id="@+id/KeepAbsoluteMode"
        android:checked="true"
        android:layout_width="213dp"
        android:layout_height="34dp"
        android:text="Keep Absolute Mode"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/AngleCurrentSetting"
        android:layout_marginTop="116dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/AngleCurrentSetting"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />
</android.support.constraint.ConstraintLayout>
