<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jackson.andrew.colorcarvesapp.AngleSettingScreen"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <CheckBox
        android:id="@+id/AngleCurrentSetting"
        android:layout_width="0dp"
        android:layout_height="51dp"
        android:text="Keep Current Setting"
        android:checked="true"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/AngleAbsoluteMode"
        app:layout_constraintRight_toRightOf="@+id/AngleAbsoluteMode"
        android:layout_marginTop="55dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="51dp"
        app:layout_constraintLeft_toLeftOf="@+id/AngleAbsoluteMode"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/AngleAbsoluteMode"
        android:layout_width="190dp"
        android:layout_height="51dp"
        android:layout_marginStart="16dp"
        android:text="Absolute Mode"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="106dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/AngleConfirm"
        android:layout_width="178dp"
        android:layout_height="48dp"
        android:text="Confrim"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/AngleCancel"
        app:layout_constraintRight_toRightOf="@+id/AngleCancel"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/AngleCancel" />

    <Button
        android:id="@+id/AngleCancel"
        android:layout_width="178dp"
        android:layout_height="48dp"
        android:text="Cancel"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="41dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <SeekBar
        android:id="@+id/AngleLimitSeekBar"
        android:layout_width="305dp"
        android:layout_height="35dp"
        android:max="1022"
        android:layout_marginStart="26dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/AngleLimit"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Angle Limit:"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintRight_toLeftOf="@+id/AngleLimitDisplay"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/AngleLimitDisplay"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/AngleLimitSeekBar"
        app:layout_constraintTop_toTopOf="@+id/AngleLimitDisplay"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/AngleLimitDisplay"
        android:layout_width="82dp"
        android:layout_height="41dp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginEnd="77dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/AngleLimitSeekBar"
        app:layout_constraintRight_toRightOf="@+id/AngleLimitSeekBar"
        android:layout_marginTop="43dp"
        app:layout_constraintTop_toBottomOf="@+id/AngleAbsoluteMode"
        android:layout_marginBottom="35dp" />
</android.support.constraint.ConstraintLayout>
