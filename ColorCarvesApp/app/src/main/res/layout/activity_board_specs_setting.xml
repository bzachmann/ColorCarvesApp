<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jackson.andrew.colorcarvesapp.BoardSpecsScreen"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/BoardSpecsConfirm"
        android:layout_width="178dp"
        android:layout_height="48dp"
        android:text="Confirm"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/BoardSpecsCancel"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/BoardSpecsCancel"
        android:layout_width="178dp"
        android:layout_height="48dp"
        android:text="Cancel"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="32dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <CheckBox
        android:id="@+id/KeepWheelDiam"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:checked="true"
        android:text="Keep Wheel Diameter Settings"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/WheelDiamDisplay"
        app:layout_constraintRight_toRightOf="@+id/KeepLedSpacing"
        android:layout_marginTop="50dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="46dp"
        app:layout_constraintLeft_toLeftOf="@+id/WheelDiamSeekbar"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/KeepLedSpacing"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:checked="true"
        android:text="Keep LED Spacing Settings"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/LEDSpacingDisplay"
        android:layout_marginTop="225dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/LEDSpacingSeekbar"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/WheelDiamSeekbar"
        android:layout_width="212dp"
        android:layout_height="38dp"
        android:layout_marginBottom="90dp"
        android:layout_marginTop="90dp"
        android:max="126"
        app:layout_constraintBottom_toTopOf="@+id/KeepLedSpacing"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/KeepLedSpacing"
        app:layout_constraintRight_toLeftOf="@+id/WheelDiamDisplay"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <SeekBar
        android:id="@+id/LEDSpacingSeekbar"
        android:layout_width="225dp"
        android:layout_height="40dp"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:max="1022"
        app:layout_constraintBottom_toBottomOf="@+id/LEDSpacingDisplay"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/KeepLedSpacing"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/LEDSpacingDisplay"
        android:layout_width="64dp"
        android:layout_height="46dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp"
        app:layout_constraintLeft_toRightOf="@+id/LEDSpacingSeekbar"
        app:layout_constraintTop_toBottomOf="@+id/KeepLedSpacing"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/WheelDiamDisplay"
        android:layout_width="64dp"
        android:layout_height="42dp"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/KeepLedSpacing"
        android:layout_marginEnd="63dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="89dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="48dp"
        app:layout_constraintVertical_bias="0.0" />
</android.support.constraint.ConstraintLayout>
