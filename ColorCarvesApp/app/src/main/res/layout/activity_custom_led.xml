<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jackson.andrew.colorcarvesapp.CustomLED">

    <CheckBox
        android:id="@+id/OddLED"
        android:layout_width="139dp"
        android:layout_height="34dp"
        android:layout_marginBottom="34dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="Set Odd LED"
        app:layout_constraintBottom_toBottomOf="@+id/EvenLED"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <CheckBox
        android:id="@+id/SecondHalfLED"
        android:layout_width="0dp"
        android:layout_height="34dp"
        android:text="Set 2nd Half LED"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/FirstHalfLED"
        app:layout_constraintTop_toBottomOf="@+id/FirstHalfLED"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/FirstHalfLED" />

    <CheckBox
        android:id="@+id/FirstHalfLED"
        android:layout_width="0dp"
        android:layout_height="34dp"
        android:text="Set 1st Half LED"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/RainbowLED"
        app:layout_constraintTop_toBottomOf="@+id/RainbowLED"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/RainbowLED" />

    <CheckBox
        android:id="@+id/EvenLED"
        android:layout_width="139dp"
        android:layout_height="34dp"
        android:layout_marginTop="66dp"
        android:text="Set Even LED"
        app:layout_constraintLeft_toLeftOf="@+id/OddLED"
        app:layout_constraintRight_toRightOf="@+id/OddLED"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <CheckBox
        android:id="@+id/RainbowLED"
        android:layout_width="0dp"
        android:layout_height="34dp"
        android:text="RainBowPattern"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/EvenLED"
        app:layout_constraintTop_toBottomOf="@+id/EvenLED"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/EvenLED" />

    <SeekBar
        android:id="@+id/LEDColor"
        android:layout_width="0dp"
        android:layout_height="39dp"
        android:max="765"
        app:layout_constraintRight_toLeftOf="@+id/DisplayLED"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/DisplayLED"
        android:layout_marginEnd="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/DisplayLED" />

    <Button
        android:id="@+id/DisplayLED"
        android:layout_width="88dp"
        android:layout_height="64dp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/CustomLEDConfirm"
        android:layout_marginEnd="15dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="27dp" />

    <Button
        android:id="@+id/CustomLEDConfirm"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Confirm"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/CustomLEDCancel"
        app:layout_constraintRight_toRightOf="@+id/CustomLEDCancel"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/CustomLEDCancel" />

    <Button
        android:id="@+id/CustomLEDCancel"
        android:layout_width="178dp"
        android:layout_height="48dp"
        android:text="Cancel"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="40dp"
        app:layout_constraintLeft_toLeftOf="parent" />
</android.support.constraint.ConstraintLayout>
