<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jackson.andrew.colorcarvesapp.MainMenu"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/ToLEDScreen"
        android:layout_width="127dp"
        android:layout_height="56dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="47dp"
        android:text="Set LEDS"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginLeft="36dp" />

    <Button
        android:id="@+id/ToSpeedScreen"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Set Speed"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/ToLEDScreen"
        android:layout_marginTop="42dp"
        app:layout_constraintTop_toBottomOf="@+id/ToLEDScreen"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/ToLEDScreen" />

    <Button
        android:id="@+id/ToBaseSettingScreen"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Base Setting"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/ToSpeedScreen"
        android:layout_marginTop="33dp"
        app:layout_constraintTop_toBottomOf="@+id/ToSpeedScreen"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/ToSpeedScreen" />

    <Button
        android:id="@+id/ToEnableOptions"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Enable Options"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/ToBoardSpecs"
        android:layout_marginTop="33dp"
        app:layout_constraintTop_toBottomOf="@+id/ToBoardSpecs"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/ToBoardSpecs" />

    <Button
        android:id="@+id/ToBoardSpecs"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Board Specs"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/ToAngleScreen"
        android:layout_marginTop="42dp"
        app:layout_constraintTop_toBottomOf="@+id/ToAngleScreen"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/ToAngleScreen"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/ToAngleScreen"
        android:layout_width="127dp"
        android:layout_height="0dp"
        android:layout_marginEnd="33dp"
        android:text="Set Angle"
        app:layout_constraintBottom_toBottomOf="@+id/ToLEDScreen"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ToLEDScreen"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginRight="33dp"
        app:layout_constraintVertical_bias="0.0" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="20dp" />

    <TextView
        android:id="@+id/DeviceAddress"
        android:layout_width="75dp"
        android:layout_height="32dp"
        android:text="Device Connected"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="36dp"
        app:layout_constraintBottom_toBottomOf="@+id/DeviceAddressDisplay"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="36dp" />

    <TextView
        android:id="@+id/DeviceAddressDisplay"
        android:text="Connected"
        android:visibility="invisible"
        android:layout_width="222dp"
        android:layout_height="30dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="96dp"
        app:layout_constraintTop_toBottomOf="@+id/ToEnableOptions"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="95dp"
        app:layout_constraintLeft_toRightOf="@+id/DeviceAddress"
        android:layout_marginLeft="11dp"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/toCustomLED"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Custom LED"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/ToBaseSettingScreen"
        android:layout_marginTop="239dp"
        app:layout_constraintTop_toBottomOf="@+id/ToBaseSettingScreen"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/ToBaseSettingScreen"
        app:layout_constraintHorizontal_bias="0.0" />
</android.support.constraint.ConstraintLayout>
